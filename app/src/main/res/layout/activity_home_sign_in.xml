<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountcontrol.HomeSignInActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="314dp"
            android:layout_height="343dp"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="?attr/selectableItemBackground"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/app_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-70dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/black_and_white_picture"
            android:text="@string/full_app_name"
            android:textAlignment="center"
            android:textColor="#D739BD3E"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/input_phone_number_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/input_phone_number"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="18sp" />

        <Button
            android:id="@+id/phone_number_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"
            android:text="@string/phone_number" />

    </LinearLayout>
</RelativeLayout>